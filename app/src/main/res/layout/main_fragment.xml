<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <Button
        android:id="@+id/testMethod"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:text="TestMethod"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/purple_200"
        android:background="@null"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"/>

    <Button
        android:id="@+id/testActivity"
        app:layout_constraintTop_toBottomOf="@id/testMethod"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:text="TestActivity"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/teal_200"
        android:background="@null"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"/>

    <Button
        android:id="@+id/testResource"
        app:layout_constraintTop_toBottomOf="@id/testActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:text="TestResource"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/material_on_primary_emphasis_medium"
        android:background="@null"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>